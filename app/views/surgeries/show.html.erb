<% provide(:title, @surgery.name) %>
<script type="text/javascript">
  $(document).ready(function() {
    $("#lightSlider").lightSlider({
      gallery: true,
      item: 1,
      loop:true,
      slideMargin: 0,
      thumbItem: 9
    })
  });

</script>
<div>
  <!-- Title -->
  <h1><%= @surgery.name %> </h1>

  <!-- Clinical Cases -->
  <% if @surgery.picquantity > 0 %>
    <center><h4>Casos Clínicos</h4></center>
    <div class="row">
      <div class="col-sm-2">
      </div>
      <div class="col-sm-8">
        <ul id="lightSlider">
          <% for i in 1..@surgery.picquantity %>
            <% baseimg = @surgery.img %>
            <%= content_tag(:li, image_tag(baseimg + "-#{i}.png"), 'data-thumb' => image_path(baseimg + "-#{i}.png")) %>
          <% end %>
        </ul>
    </div>
    <div class="col-sm-2">
    </div>
    </div>
  <% end %>
  <!-- Description -->
  <h4>Descripción del Procedimiento</h4>
  <div class="surgery-description">
    <%= simple_format @surgery.description %>
  </div>

</div>
